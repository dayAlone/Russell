.button
    display inline-block
    height 53px
    min-width 170px
    padding 0 20px
    background-color #ff1628
    border-radius 5px
    color white
    font-weight bold
    line-height 56px
    font-size 18px
    t background
    text-align center
    &--small
        height 40px
        line-height 43px
        font-size 16px
    &--big

        height 60px
        line-height 63px
        min-width 180px
        margin 6px 1px 0 0
        font-size 19px
        @media (min-width: $scr_s)
            font-size 22px
    &:hover
        background-color alpha(#ff1628, .7)
    img
        margin-right 10px
        position relative
        top -1px
        max-height 55%
    & + &
        margin-left 20px
    &--fb
        background-color #005b9c
    &--vk
        background-color #1483b7


.edit
    position absolute
    top 0
    left 100%
    color white
    line-height 30px
    size 30px
    font-size 14px
    background-color red
    border-radius 4px
    img
        middle()
    > *
        pointer-events none
