.categories
    full-width()
    z-index 20
    padding 0px 0 0px
    .text
        padding-top 0px
        padding-bottom 0px
        h2
            margin-bottom 20px
    &__item
        padding 0 7px
        span(1/4)
        margin-bottom 45px

    &__action
        padding 27px 0 47px
        full-width()
    &__rows
        padding 0 25px
    &__slider
        position relative
        padding 0 25px
        .slick-track
            padding 20px 0 10px
        full-width()
        .categories__item
            margin-bottom 0px
        .slick-next
            left calc(100% - 15px)
        .slick-prev
            right calc(100% - 15px)
    &__frame
        min-height 354px
        overflow hidden
        background white url(/layout/images/block.jpg) center bottom
        background-size cover
        border-radius 9px
        color black
        t all, .4s
        box-shadow 0 0 0 0 alpha(red, 1)
        &:hover
            transform translateY(-10px)
            box-shadow 0 6px 15px 2px alpha(red, .5)
    &__image
        width 100%
        min-height 138px
        background-size cover
        background-position center center
        border-top-right-radius 0px
        border-top-left-radius 0px
        background-color black
    &__line
        margin-bottom 40px
    &__name
        font-weight bold
        font-size 15px
        padding 9px 10px 5px 10px
        text-transform uppercase
        line-height 1.3
        min-height 54px
    &__description
        font-family: Arial;
        font-size 12px
        padding 15px 15px
        line-height 16px
