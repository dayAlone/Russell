.categories
    full-width()
    z-index 20
    padding 10px 0 0
    @media (min-width: $scr_s)
        padding 0

    &--list
        .categories__item
            transform scale(.9)
            opacity 0
        &.categories--ready
            .categories__item
                transform scale(1)
                opacity 1

    .text
        padding-top 0px
        padding-bottom 0px
        h2
            margin-bottom 20px
        .page--index &
            @media (max-width: $scr_s)
                text-align center

    &__action
        full-width()
        padding 27px 0 47px
        @media (min-width: $scr_xs)
            padding-bottom 30px
        @media (min-width: $scr_s)
            padding 27px 0 47px

    &__description
        font-family 'Arial'
        padding 12px 12px
        background url(/layout/images/divide.png) top center no-repeat
        background-size 100% 14px
        padding-bottom 35px
        font-size 12px
        -webkit-text-size-adjust: 100%
        @media (min-width: 400px)
            padding-bottom 0px
        @media (min-width: $scr_s)
            line-height 12px
        @media (min-width: $scr_sm)
            line-height 14px
        @media (min-width: $scr_md)
            font-size 12px

    &__frame
        color black
        overflow hidden
        background white url(/layout/images/block.jpg) center bottom
        background-size 100% auto
        border-radius 9px

        box-shadow 0 0 0 0 alpha(red, 1)
        position relative
        transition .3s transform, .3s box-shadow
        transform translateX(-50%)
        left 50%

        max-width 220px
        @media (min-width: 400px)
            min-height 340px
            max-width none
            left 0
            transform none
        @media (min-width: $scr_s)
            min-height 324px
            &:hover
                transform translateY(-10px)
                box-shadow 0 6px 15px 2px alpha(red, .5)
        @media (min-width: $scr_sm)
            min-height 344px
        @media (min-width: $scr_md)
            min-height 354px



    &__image
        width 100%
        min-height 138px
        background-size cover
        background-position center center
        border-top-right-radius 0px
        border-top-left-radius 0px
        background-color black

    &__item
        padding 0 7px
        margin-bottom 35px
        display block
        @media (min-width: 400px)
            lost-column 1/2 0 0
        @media (min-width: $scr_s)
            margin-bottom 45px
            lost-column 1/3 0 0
        @media (min-width: $scr_md)
            lost-column 1/4 0 0

    &__line
        margin-bottom 40px

    &__name
        font-weight bold

        padding 9px 10px 5px 10px
        text-transform uppercase
        line-height 1.3
        font-size 14px

        @media (min-width: $scr_s)
            min-height 44px
        @media (min-width: $scr_sm)
            font-size 14px
            min-height 54px
        @media (min-width: $scr_md)
            font-size 15px

    &__rows
        padding 0 25px

    &__slider
        position relative
        padding 0 35px
        margin-top 0px
        @media (min-width: 400px)
            margin-top 0px
        @media (min-width: $scr_s)
            padding 0 25px
        .slick-track
            @media (min-width: 400px)
                padding 20px 0 10px
        full-width()
        .categories__item
            margin-bottom 0px
            width 100%
        .slick-next
            left calc(100% + 10px)
            @media (min-width: $scr_s)
                left calc(100% + 10px)
        .slick-prev
            right calc(100% + 10px)
            @media (min-width: $scr_s)
                right calc(100% + 10px)
