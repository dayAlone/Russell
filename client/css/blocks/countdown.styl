.countdown
    width 100%
    padding 21px 0 7px
    line-height 1.3
    &__item, &__frame, &__till
        float left
    &__till
        margin-right 17px
        @media (max-width: $scr_sm)
            full-width()
            margin-right 0px
            padding-left 7px
            margin-bottom 2px
            br
                display none
    &__frame
        @media (max-width: $scr_sm)
            max-width 250px
            margin-top -10px
    &__info
        color #ff1628
        font-size 15px
        float left
        min-width 110px
    &__button
        display inline-block
        height 34px
        border-radius 5px
        border 1px solid white
        line-height 34px
        font-size 14px
        font-weight bold
        padding 0 18px
        margin-left 3px
        t all
        color white
        &:hover
            border-color red
            color red
    &__item
        text-align center
        width 45px
        line-height 1
        margin-right 6px
        position relative
        &:after
            content ":"
            position absolute
            font-size 26px
            top -2px
            right -6px
        strong, span
            width 100%
            display inline-block
        span
            font-size 10px
            position relative
            top -8px
        strong
            font-size 26px
            font-weight bold
            height 30px
        &:last-of-type:after
            display none
    &__divider
        border-right 1px solid #303030
        height 36px
        float left
        margin 0 24px
