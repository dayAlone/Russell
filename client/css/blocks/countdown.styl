.countdown
    width 100%

    line-height 1.3
    border-top 1px solid alpha(white, .2)
    padding-top 23px
    &__rating
        margin-top 15px
        display inline-block
        font-size 13px
        color white
        border-line alpha(white, .5)
        &:hover
            color red
            border-line alpha(red, .5)
    &__items
        float left
        white-space no-wrap
        @media (max-width: $scr_s)
            width 100%
    &__item, &__frame, &__till
        float left
        white-space normal
        @media (max-width: $scr_s)
            float none
            display inline-block
    &__till
        margin-right 17px
        @media (max-width: $scr_s)
            width 100%
            margin-bottom 10px
            br
                display none

        @media (min-width: $scr_s) and (max-width: $scr_sm)
            full-width()
            margin-right 0px
            padding-left 7px
            margin-bottom 3px
            br
                display none
    &__frame
        @media (max-width: $scr_s)
            width 100%
            text-align center
            margin-top 15px
        @media (min-width: $scr_s) and (max-width: $scr_sm)
            max-width 280px
            margin-top -10px
    &__info
        color #ff1628
        font-size 15px
        float left
        min-width 110px
        @media (min-width: $scr_s)
            margin-right 30px
        @media (max-width: $scr_s)
            width 100%
            text-align center

            br
                display none
    &__button
        display inline-block
        height 37px
        border-radius 5px
        line-height 39px
        font-size 14px
        font-weight bold
        padding 0 25px
        t all
        color white
        background-color red
        @media (min-width: $scr_sm)
            margin-top 10px
        @media (min-width: $scr_md)
            margin-left 25px
            margin-top 0px
        &:hover
            color white
            background-color alpha(red,.7)
    &__item
        text-align center
        width 45px
        line-height 1
        margin-right 6px
        position relative
        &:after
            content ":"
            position absolute
            font-size 26px
            top -2px
            right -6px
        strong, span
            width 100%
            display inline-block
        span
            font-size 10px
            position relative
            top -8px
        strong
            font-size 26px
            font-weight bold
            height 30px
        &:last-of-type:after
            display none
    &__divider
        border-right 1px solid #303030
        height 36px
        float left
        margin 0 24px
        @media (max-width: $scr_s)
            display none
