.dream
    &__more
        margin-top 40px
        display none
    .text
        h3
            font-size 20px
            margin 40px 0 35px
        &__divider
            margin 30px 0
            & + h3
                margin-top 10px
        p
            line-height 1.4
        section
             lost-utility: clearfix
             & + p
                margin-top 20px
        .button
            margin-bottom 30px
        a:not(.button)
            color red
            border-line(alpha(red, .5))

        &__col
            float left
            @media (min-width: $scr_s)
                lost-column 1/2
                lost-column-cycle: 2
                &--small
                    lost-column 1/3 3
                    padding-right 30px
