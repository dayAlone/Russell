.dropdown
    margin-bottom 15px
    position relative
    text-align left
    &--small

        .dropdown
            &__trigger, &__item
                height 27px
                line-height 29px
                font-size 13px
            &__trigger
                background-color #717b84
                svg
                    top 10px
                &:after
                    height 27px
                    background-color #717b84
    &--error
        .dropdown__trigger
            box-shadow inset 0 0 0 1px red
    &__select
        position absolute
        size 100%
        min-height 100%
        left 0
        top 0
        opacity 0
        display none
        .mobile &
            display block
    a&__trigger
        position relative
        width 100%
        background #393c41
        background-image none
        display inline-block
        height 31px
        color white
        line-height 33px
        padding 0 15px
        transition .3s background .1s
        white-space no-wrap
        overflow hidden
        span
            color white
        svg
            position absolute
            right 13px
            top 12px
            z-index 3
            max-width 10px
        &:after
            position absolute
            size 36px 31px
            z-index 2
            right 0
            top 0
            content ""
            background-color #393c41
            transition .3s background .1s
        &:hover
            background red
            color white
            background-image none
            &:after
                background-color red
    &__frame
        position absolute
        top 100%
        width 100%
        left 0
        background-color red
        opacity 0
        transition .3s all .1s
        visibility hidden
    a&__item
        line-height 34px
        height 31px
        background transparent
        width 100%
        display inline-block
        padding 0 15px
        font-size 14px
        color white
        &:hover
            color white
            background-color alpha(white, .1)
    html:not(.mobile) &
        &--hover
            .dropdown
                &__frame
                    opacity 1
                    visibility visible
                &__trigger
                    &, &:after
                        background red
