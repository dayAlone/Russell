.dropdown
    margin-bottom 15px
    position relative
    &--error
        .dropdown__trigger
            box-shadow inset 0 0 0 1px red
    &__select
        position absolute
        size 100%
        left 0
        top 0
        opacity 0
        @media (min-width: $scr_sm)
            display none
    a&__trigger
        position relative
        width 100%
        background #393c41
        background-image none
        display inline-block
        height 31px
        line-height 33px
        padding 0 15px
        transition .3s background .1s
        img
            position absolute
            right 13px
            top 12px
        &:hover
            background red
            color white
            background-image none
    &__frame
        position absolute
        top 100%
        width 100%
        left 0
        background-color red
        opacity 0
        transition .3s all .1s
        visibility hidden
    a&__item
        line-height 34px
        height 31px
        background transparent
        width 100%
        display inline-block
        padding 0 15px
        font-size 14px
        &:hover
            color white
            background-color alpha(white, .1)
    &:hover
        .dropdown
            &__frame
                opacity 1
                visibility visible
            &__trigger
                background red
