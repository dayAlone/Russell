.dropdown
    margin-bottom 15px
    position relative
    text-align left
    position relative
    z-index 10
    .table &
        margin -3px 0
        &__trigger
            font-size 12px
            line-height 31px
            background-color transparent
            border 1px solid white
            border-radius 5px
            font-weight bold
            .admin &
                border-radius 0
                border 0
            svg
                top 10px
            &:hover
                border-radius 0
                border-color red
            &:after
                background-color black
    &--small
        .dropdown
            &__trigger, &__item
                height 27px
                line-height 29px
                font-size 13px
            &__item
                height auto
                line-height 1
                padding 7px 10px 5px
                min-height 0
            &__trigger
                background-color #717b84
                svg
                    top 10px
                &:after
                    height 27px
                    background-color #717b84
    &--error
        .dropdown__trigger
            box-shadow inset 0 0 0 1px red
    &__select
        position absolute
        size 100%
        min-height 100%
        left 0
        top 0
        opacity 0
        display none
        .mobile &
            display block
    a&__trigger
        position relative
        width 100%
        background #393c41
        background-image none
        display inline-block
        height 31px
        color white
        line-height 33px
        padding 0 15px
        transition .3s background .1s
        white-space no-wrap
        overflow hidden
        span
            color white
        svg
            position absolute
            right 13px
            top 12px
            z-index 3
            max-width 10px
        &:after
            position absolute
            size 36px 31px
            z-index 2
            right 0
            top 0
            content ""
            background-color #393c41
            transition .3s background .1s
        &:hover
            background red
            color white
            background-image none
            &:after
                background-color red
    &__frame
        position absolute
        top 100%
        width 100%
        left 0
        background-color red
        opacity 0
        transition .3s all .1s
        visibility hidden
    a&__item
        min-height 29px
        background transparent
        width 100%
        display inline-block
        padding 7px 15px 5px
        font-size 12px
        color white
        white-space normal
        @media (min-width: $scr_sm)
            font-size 14px
        &:hover
            color white
            background-color alpha(white, .1)
    html:not(.mobile) &
        &--hover
            z-index 20
            .dropdown
                &__frame
                    opacity 1
                    visibility visible
                &__trigger
                    &, &:after
                        background red
