.footer
    full-width()

    color alpha(white, .4)
    z-index 20
    font-size 10px
    background url(/layout/images/footer-mobile.jpg) top center no-repeat
    background-size 100% 100%
    .modal-open &
        z-index 1
    @media (min-width: $scr_s)
        min-height 228px
        background url(/layout/images/footer.jpg) top center no-repeat
        font-size 12px
        background-size 100% 240px
        br
            display none
    @media (max-width: $scr_sm)
        text-align center
    img
        middle()

    &__text
        middle()
        line-height 1
        text-align left
        @media (min-width: $scr_s)
            max-width 50%
            margin-top 15px
        @media (min-width: $scr_md)
            max-width none
            margin-top 0px
    &__copyright
        full-width()
        margin-bottom 20px
        @media (min-width: $scr_s)
            line-height 78px
            padding-top 2px
            padding 0 15px
            margin-bottom 0px
        a
            color alpha(white, .4)
            :not([href='#'])
            border-line(alpha(white, .2))

            &:hover
                color alpha(white, 1)
                border-line(alpha(@color, .5))
    &__spectrum
        @media (min-width: $scr_s)
            lost-column 2.5/4 0 0
        @media (min-width: $scr_md)
            lost-column 3/4 0 0
        img
            margin-right 16px
            margin-left 5px
            position relative
            top -5px
            @media (min-width: $scr_s)
                top 3px
    &__rules
        margin-bottom 20px

        a
            display inline-block
            line-height 1.2
        @media (min-width: $scr_s)
            lost-column 1.5/4 0 0
        @media (min-width: $scr_md)
            lost-column 1/4 0 0
    &__social
        padding 54px 0 20px
        @media (min-width: $scr_s)
            padding 0
            line-height 183px
            max-height 146px
        overflow hidden
        .social
            middle()
            size 35px
            line-height 35px
            margin 0 8px
            border-radius 2px
            text-align center
            t opacity
            img
                max-width 25px
                max-height 19px

            &--vk
                background-color #1f84b5
            &--fb
                background-color #005c9a
                padding-left 2px
            &--in
                background-color #006a9c
                padding-left 1.5px

            &:hover
                opacity .5
