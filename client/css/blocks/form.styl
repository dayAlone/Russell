.form
    lost-utility clearfix
    .radio-group
        a
            margin 0 7px
            font-size 13px
        label
            font-weight normal
            display inline
            font-size 13px
            margin-right 10px
        input
            display none
            &:checked + a
                color red
                background-image none
    .alert
        font-size 11px
        border 1px solid alpha(white, .5)
        padding 11px 20px 7px
        border-radius 5px
        line-height 13px
        &--error
            border-color red
            color red !important
    label
        font-weight bold
        font-size 16px
        line-height 37px

    &__title
        font-weight bold
        color #717b84
        text-align center
        margin-bottom 10px
        margin-top 5px
        full-width()
        font-size 16px
        &:first-of-type
            margin-top 1px
    .file
        max-width 100%
        overflow hidden
        min-height 40px
        float left
        lost-utility clearfix
        white-space no-wrap
        input
            display none
        &.error
            .file__trigger
                box-shadow inset 0 0 0 1px red, inset 0 0 0 3px white
        &__info
            color alpha(black, .7)
            font-size 14px
        &__trigger
            @extend .button, .button--small
            background-color #6e6c71
            background-image none
            margin-right 20px

            &:hover
                color white
                background-color red
                background-image none
    input
        &:focus
            outline 0
        &[type='submit']
            min-width 149px
            height 41px
            background-color #e6141d
            border-radius 5px
            border 0
            font-size 15px !important
            color white
            font-weight bold
            transition .3s background, .3s opacity
            white-space no-wrap
            display inline-block
            span
                color white
            img
                middle()
                margin-right 5px
            &:hover
                background-color #ff000b
            &:disabled
                background-color #383c41
                opacity .5
        &[type='text']
            width 100%
            background-color #383c41
            color white
            padding 0 15px
            border 0
            line-height 31px
            margin-bottom 15px
            .modal &
                background-color white
                box-shadow inset 0 0 0 1px #383c41
                color #383c41
                &:focus
                    box-shadow inset 0 0 0 1px #005b9c
            &:focus, &:active
                outline 0
    button
        @extend .form input[type='submit']
        &:focus, &:active
            outline 0
    input, textarea
        &.error
            box-shadow inset 0 0 0 1px red !important
    textarea
        background-color #383c41
        height 220px
        border 0
        padding 10px 15px
        resize none
        margin 0
        width 100%
        margin-bottom 20px
        color white
        &:focus
            outline 0
