.games
    full-width()
    z-index 10
    & + .share-love
        margin-top -65px
    .game
        full-width()
        position relative
        padding-top 20px
        &__content
            column(8/12)
            position absolute
            left 0
            top 50%
            transform translateY(-50%)
        &__description
            line-height 1.4
            margin-bottom 25px
            max-width 97%
        &__flag
            @extend .title__flag
            right 0
            top 30px
            left auto
        &__image
            position relative
            column(4/12)
            float right
            margin-right 0px
            img
                max-width 100%
        &__line
            margin 20px 0 0
        &__title
            @extend .text h2
            margin-top 0px
            margin-bottom 18px
