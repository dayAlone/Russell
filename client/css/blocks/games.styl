.games
    full-width()
    z-index 10
    & + .share-love
        margin-top -65px
    .game
        full-width()
        position relative
        padding-top 20px
        min-height 241px
        &__content
            lost-column 8/12 0 0
            position absolute
            left 0
            top 50%
            transform translateY(-50%)
        &__description
            line-height 1.4
            margin-bottom 25px
            max-width 97%
        &__flag
            @extend .title__flag

            @media (min-width: $scr_s)
                width 100px
                right 0
                top 30px
                left auto
        &__image
            position relative
            lost-column 4/12 0 0
            float right !important
            margin-right 0px
            img
                max-width 100%
        &__line
            margin 20px 0 0
        &__title
            @extend .text h2
            margin-top 0px
            margin-bottom 18px
