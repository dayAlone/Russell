.header
    height 140px
    line-height 140px
    color white
    overflow hidden
    &__col
        span(1/3)
    img
        max-width 100%
    &__logo, img
        display inline-block
        vertical-align middle
        line-height 1
    &__links
        line-height 165px
        span
            font-size 11px
            margin 0 1px
        a
            color white
            font-size 12px
            border-line(alpha(@color, .5))
            &:hover
                color red
                border-line(alpha(@color, .5))
    &__profile
        line-height 140px
        text-align right
        middle()
        img
            border-radius(5px)

    &__name
        middle()
        text-align left
        font-size 13px
        line-height 1.2
        margin-left 10px

    img&__title
        position relative
        top 10px
        right -30px

        max-width 80%
        @media (min-width: $scr_md)
            top 5px
            right -16px
            max-width 236px
