.header
    color white
    overflow hidden

    &--mobile
        padding 0 20px
    &--desktop
        display none
    position fixed
    top 0
    left 0
    z-index 100
    background-color rgba(black, .7)
    width 100%
    height 70px
    line-height 70px
    -webkit-backdrop-filter blur(40px)
    .photoswipe-open &, .modal-open &
        z-index -1
    @media (min-width: $scr_s)
        position relative
        height 140px
        line-height 140px
        &--mobile
            display none
        &--desktop
            display block
    .nav-trigger
        img
            @media (max-width: $scr_xs)
                width 35px
    &__col
        lost-column 1/3 3 0
    img
        max-width 100%
    &__logo, img
        display inline-block
        vertical-align middle
        line-height 1
    &__logo
        img
            max-width 85px
            @media (min-width: 375px)
                max-width 112px
            @media (min-width: $scr_s)
                max-width 100%
    &__links
        line-height 165px
        span
            font-size 11px
            margin 0 1px
        a
            color white
            font-size 12px
            border-line(alpha(@color, .5))
            &:hover
                color red
                border-line(alpha(@color, .5))
    &__profile
        line-height 140px
        text-align right

        &-frame
            position relative
            display inline-block
        middle()
        img
            border-radius(5px)
    &__exit
        color red
        position absolute
        bottom 30px
        left 10px
        font-size 11px
        border-line(alpha(red, .4))
        display inline-block
        line-height 1
    &__image
        position absolute
        right 100%
        size 40px
        margin-right 12px
        top -6px
        background-position top center
        background-size cover
        border-radius 5px
    &__name
        middle()
        text-align left
        font-size 13px
        line-height 1.2
        margin-left 10px
        color white
        position relative
        span
            border-line(alpha(white, .2))
        &:hover
            span
                color red
                border-line(alpha(red, .2))

    img&__title
        position relative
        max-width 100%
        right -20px
        @media (min-width: 375px)
            right -30px
        @media (min-width: 400px)
            max-width 134px

        @media (min-width: $scr_s)
            top 2px
            right -30px
            max-width 79%
        @media (min-width: $scr_md)
            top 5px
            right -16px
            max-width 236px
