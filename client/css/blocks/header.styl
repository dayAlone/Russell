.header
    height 140px
    line-height 140px
    color white
    overflow hidden
    &__col
        span(1/3)
    img
        max-width 100%
    &__logo, img
        display inline-block
        vertical-align middle
        line-height 1
    &__links
        line-height 165px
        span
            font-size 11px
            margin 0 1px
        a
            color white
            font-size 12px
            border-line(alpha(@color, .5))
            &:hover
                color red
                border-line(alpha(@color, .5))
    img&__title
        position relative
        top 14px
        right -16px
        max-width 236px
