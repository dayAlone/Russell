.kitchen
    min-height 550px
    background url(/layout/images/kitchen/bg.jpg) bottom center
    background-size cover
    full-width()
    position relative
    border 1px solid #303130
    margin 50px 0 120px
    &__close
        size 30px
        border-radius 50%
        border 1px solid white
        position absolute
        text-align center
        line-height 28px
        right 20px
        top 20px
        opacity 0.6
        t opacity
        &:hover
            opacity 1
        img
            max-width 50%
            vertical-align middle
    &__rules
        position absolute
        top 0
        size 100%
        z-index 2
        background url(/layout/images/kitchen/bg.jpg) bottom center
        background-size cover
        padding 40px 10%
        overflow scroll
        h2
            margin-top 0px
            margin-bottom 0px
    &__divider
        margin 25px 0
        max-width 100%
    &__level, &__ui
        position absolute
        top 0
        height 100%
    &__level
        width 100%
        left 0
        background-size contain
        &--0
            background url(/layout/images/kitchen/white/bg.jpg) bottom center no-repeat
            .kitchen
                &__box
                    &--1
                        margin-left -31.1%
                        margin-top -14%
