                        margin-top -11.8%
                        margin-left 16.5%
                    &--5
                        margin-left 31.1%
                        margin-top -13.8%
                    &--6, &--7, &--8, &--9, &--10, &--11, &--12
                        margin-top 16.6%
                    &--6
                        margin-left -33%
                    &--7
                        margin-left -20.8%
                    &--8
                        margin-left -10.8%
                    &--9
                        margin-left .1%
                    &--10
                        margin-left 11%
                    &--11
                        margin-left 21%
                    &--12
                        margin-left 33.1%
        &--1
            background url(/layout/images/kitchen/black/bg.jpg) bottom center no-repeat
            .kitchen
                &__box
                    &--1
                        margin-left -31.1%
                        margin-top -13.9%
                    &--2
                        margin-left -16.5%
                        margin-top -15.6%
                    &--3
                        margin-left -16.5%
                        margin-top -8.1%
                    &--4
                        margin-top -11.7%
                        margin-left 16.6%
                    &--5
                        margin-left 28%
                        margin-top -13.85%
                    &--6
                        margin-top -13.85%
                        margin-left 34.3%

                    &--7, &--8, &--9, &--10, &--11, &--12, &--13, &--14
                        margin-top 16.7%
                    &--7
                        margin-left -33%
                    &--8
                        margin-left -20.9%
                    &--9
                        margin-left -11%
                    &--10
                        margin-left 0%
                    &--11
                        margin-left 11.05%
                    &--12
                        margin-left 21%
                    &--13
