    &__box
        position absolute
        left 50%
        top 50%
        transform translateY(-50%) translateX(-50%)
        display none
        &--active
            display block
    &__score
        display inline-block
        width 100%
        size 73px 38px
        border 1px solid white
        border-radius 5px
        line-height 39px
        font-weight bold
        font-size 24px
        margin-top 8px
    &__block
        span
            text-transform uppercase
            color #9a9da0
            font-size 10px
            font-weight bold
            line-height 1
            display inline-block
    &__ui
        position absolute
        background-size cover
        width 95px

        text-align center
        z-index 2
        padding 15px 10px
        &--left
            left 0
            background-image url(/layout/images/kitchen-ui-left.jpg)
        &--right
            right 0
            background-image url(/layout/images/kitchen-ui-right.jpg)
    &__placeholder
        text-align center
        position absolute
        top 50%
        width 80%
        left 10%
        transform translateY(-50%)
        .button
            margin-top 90px
        a:not(.button)
            color alpha(white, .7)
            margin-top 25px
            display inline-block
            line-height 1
            border-line(alpha(white, .3))
            &:hover
                color red
                border-line(alpha(red, .3))
        p
            font-size 18px
            line-height 1.4
        h2
            font-size 30px
            margin-top 30px
            margin-bottom 0px
