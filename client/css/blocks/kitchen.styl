    &__box
        position absolute
        left 50%
        top 50%
        transform translateY(-50%) translateX(-50%)
        opacity 0
        t opacity, .2s
        &-content
            position absolute
            max-width 75%
            max-height 60%
            bottom 30px
            left 50%
            top 96%
            transform translateX(-50%) translateY(-100%)
        &--active
            opacity 1
    &__score
        display inline-block
        width 100%
        size 73px 38px
        border 1px solid white
        border-radius 5px
        line-height 40px
        font-weight bold
        font-size 24px
        margin-top 8px
        margin-bottom 20px
        &--big
            size 203px 68px
            line-height 74px
            font-size 43px
            margin-left 15px
            margin-right 40px
    &__skus
        position absolute
        bottom 20px
        width 100%
        padding 0 15px
        left 0
    &__sku
        margin-bottom 15px
        position relative
        width 92%
        margin-left 4%
        &-overlay
            position absolute
            overflow hidden
            bottom 0
            width 100%
            t height
            &--1
                height (100/3)%
            &--2
                height (100/3*2)%
            &--3
                height 100%
            img
                position absolute
                bottom 2px
                left 50%
                transform translateX(-50%)
        &:last-of-type
            margin-bottom 0px
        img
            max-width 100%
            max-height 75px
    &__block
        &--inline
            display inline-block
            position relative
            top -5px
            &:first-of-type
                margin-left 15px
            .kitchen__score
                border 0
            span
                text-align left
                margin-right 5px
        span
            text-transform uppercase
            color #9a9da0
            font-size 11px
            font-weight bold
            line-height 1
            display inline-block
    &__ui
        position absolute
        background-size cover
        width 95px

        text-align center
        z-index 2
        padding 20px 10px
        &--left
            left 0
            background-image url(/layout/images/kitchen/ui-left.jpg)
        &--right
            right 0
            background-image url(/layout/images/kitchen/ui-right.jpg)
    &__placeholder
        text-align center
        position absolute
        top 50%
        width 80%
        left 10%
        transform translateY(-50%)
        > small
            font-size 11px
            color alpha(white, .5)
        &--loader
            z-index 20
        .button
            margin-top 5px
            &--top
                margin-top 90px
        a:not(.button)
            color alpha(white, .7)
            margin-top 25px
            display inline-block
            line-height 1
            border-line(alpha(white, .3))
            &:hover
                color red
                border-line(alpha(red, .3))
        p
            font-size 15px
            padding 0 9%
            line-height 1.4
            width 100%
            strong
                font-weight bold
        h2
            font-size 30px
            margin-top 30px
            margin-bottom 0px
        h3
            margin 0
            font-size 28px
            padding 0 8%
