.kitchen
    min-height 550px
    background url(/layout/images/kitchen/bg.jpg) bottom center
    background-size cover
    overflow hidden
    full-width()
    position relative
    border 1px solid #303130
    margin 50px 0 120px
    &__share
        &-title
            display inline-block
            text-align left
            margin-right 13px
            font-size 14px
            middle()
        &-scores
            margin-left 10px
            margin-top 5px
            middle()
            span:first-of-type
                font-size 30px
        button
            middle()
            margin 0 10px
            size 35px
            background-color #005c9a
            border 0
            padding 0
            text-align center
            line-height 10px
            border-radius 3px
            &.vk
                background-color #1b84b5
            img
                max-width 22px
                max-height 20px
                middle()
    &__no-mobile
        display none
        @media (max-width: $scr_md)
            display block
            position absolute
            top 0
            left 0
            size 100%
            background-color black
            z-index 1000
            > span
                position absolute
                width 80%
                left 50%
                top 50%
                transform translateY(-50%) translateX(-50%)
                font-size 30px
                line-height 1.4
                text-align center
    &__timeout
        position absolute
        top 0
        left 0
        size 100%
        background-color alpha(black, .9)
        span
            position absolute
            left 50%
            top 50%
            transform translateY(-50%) translateX(-50%)
            font-size 55px
            height 100px
            width 100px
            line-height 105px
            border 1px solid white
            text-align center
            font-weight bold
            border-radius 50%
    &__close
        size 30px
        border-radius 50%
        border 1px solid white
        position absolute
        text-align center
        line-height 28px
        right 20px
        top 20px
        opacity 0.6
        t opacity
        &:hover
            opacity 1
        img
            max-width 50%
            vertical-align middle
    &__loader
        size 70% 20px
        display inline-block
        margin 40px 0
        border-radius 40px
        border 1px solid white
        padding 2px
        text-align left
        t width
        span
            display inline-block
            height 14px
            border-radius 20px
            background-color red
    &__rules
        position absolute
        top 0
        size 100%
        z-index 2
        background url(/layout/images/kitchen/bg.jpg) bottom center
        background-size cover
        padding 40px 10%
        overflow auto
        h2
            margin-top 0px
            margin-bottom 0px
        p
            line-height 1.4
    &__divider
        margin 25px 0
        max-width 100%
    &__level, &__ui
        position absolute
        top 0
        height 100%
    &__level
        width 100%
        left 0
        background-size contain
