.nav
    full-width()
    margin-bottom 26px
    text-align center
    &__col
        span(1/4)
    &__line
        content ""
        width calc(100% + 320px * 2)
        background url(/layout/images/menu.jpg) no-repeat top center
        background-size 100% auto
        height 24px
        position absolute
        bottom -24px
        left -320px
    &__item
        color white

        padding 11px 27px 9px
        display inline-block
        border-top-right-radius 4px
        border-top-left-radius 4px

        font-size 17px
        padding 11px 15px 9px
        @media (min-width: $scr_md)
            font-size 18px
            padding 11px 27px 9px
        &:hover
            color red
        &--active
            &, &:hover
                color white
                background-color #ed1c13
#app
    overflow hidden
