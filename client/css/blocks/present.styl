.present
    padding 40px 0 80px
    min-height 700px
    full-width()
    position relative
    &--bg
        background url(/layout/images/texture.jpg) bottom center no-repeat
        background-size 140% auto
    &__description
        @media (min-width: $scr_sm)
            width 85%
            margin-left 7.5%
        > p:first-of-type
            margin-bottom 35px

        a.small
            font-size 12px
            color red
            border-line(alpha(red ,.5))
            display inline-block
            margin-top 20px
            margin-bottom 10px
        @media (max-width: $scr_sm)
            .button
                margin-bottom 20px
    .button
        min-width 190px
        font-size 14px
        margin 0 15px
        &--send, &--again
            padding 0 40px
            font-size 22px
            margin-bottom 30px
        &--again
            margin-top 20px
        &--locked
            background-color #383c41
            pointer-events none
            img
                size 20px
                middle()

    &__letter
        max-width 600px
        background-color black
        padding 10px
        border 1px solid #2b2b2b
        margin 10px auto 30px
        &-social
            img
                margin 20px 10px -45px
                position relative
                z-index 2
        &-col
            width 50%
            float left
            font-size 14px
            line-height 1.3
            padding 20px 5px 0
            margin-bottom -10px
        &-footer
            color #686868
            font-size 10px
            padding 10px 0 2px

    small
        max-width 600px
        margin 0 auto
        display inline-block
        color #aeb4b8
        font-size 12px
        line-height 1.2
        margin-bottom 30px
    .crop
        margin 0 auto
        border 1px solid #2b2b2b
        padding 10px
        width 620px !important
        height 620px !important
        position relative
        &__buttons
            position absolute
            top 0
            right -65px
            a
                display inline-block
                margin-bottom 10px
                t opacity
                &:hover
                    opacity .5
        .cropper-container
            position relative
            z-index 2
        &:after
            content: ""
            background-color #1c1e21
            size 600px
            top 10px
            left 10px
            position absolute
            z-index 1
    .form
        max-width 60%
        margin 0 auto
        margin-bottom 30px
        .file
            display inline-block
            float none
            margin-top 10px
            &__trigger
                background-color red
                font-size 21px
                size 220px 52px
                line-height 54px
                margin-right 0px

        input
            background-color white
            color black
            placeholder(color alpha(black, .4),)
    &__category
        &-name
            height 40px
            line-height 41px
            background-color #575c65
            border-radius 3px
            padding 0 20px
            text-align center
            font-weight bold
            font-size 18px
            t background-color
            display inline-block
            color white
            width 100%
        &-frame
            border 1px solid #575c65
            full-width()
            border-radius 3px
            margin-bottom 4px
            t border-color
            &--active
                border-color #717b84
                .present__category-name
                    background-color #717b84
            .products
                padding 30px 20px 0
                background-image none
                &__item
                    height 295px
                    cursor pointer
                    &--active
                        box-shadow 0 0 0 1px red
                &__link
                    min-height 295px
    &__content
        padding 30px 0
        full-width()
    &__col
        float left
        min-height 1px
        margin-bottom 20px
        width 100%
        @media (min-width: $scr_sm)
            width (100/3)%
            margin-bottom 0px
    &__prizes
        @media (max-width: $scr_sm)
            .present__col
                margin-bottom 50px
                &:first-of-type
                    img
                        margin-top -70px
    &__toolbar
        .button--small
            background-color #575c65
            min-width 90px
            height 33px
            line-height 34px
            font-size 14px
    &__item
        margin-top 30px
        padding 0 20%
        img
            max-width 150px
        span
            font-size 14px
            line-height 1
            display inline-block
    &__step
        display inline-block
        size 30px
        margin-right 10px
        border 2px solid red
        border-radius 50%
        text-align center
        line-height 28px
        font-weight bold
        &--active
            background-color red
    .text
        p
            @extends .dream .text p
            max-width none
            & + .text__divider
                margin-top 10px
        &__number
            @extends .dream .text__number
            margin-bottom 10px
            padding-right 10px
        span.text__number:before
            top -10px

        &__divider
            margin 20px 0
            display inline-block
    h3
        margin-top 0px
        margin-bottom 40px
    h4
        margin-top 5px
        margin-bottom 0px
    h2
        text-align center
        font-size 33px
        margin-bottom 30px
        & + h4
            margin-top -10px
    &__footer, &__toolbar
        full-width()
    &__list
        margin-right -10px
        margin-left -10px

    &__gallery

        .present-item
            width 25%
            float left
            padding 10px
            text-align center
            margin-bottom 10px
            &__likes
                color #575c65
                &--liked
                    pointer-events none
                    svg
                        path
                            stroke red
                            opacity 1
                            fill red
                            fill-opacity: 1
                &:hover
                    color white
                    svg
                        path
                            stroke red
                            opacity 1
                svg
                    middle()
                    position relative
                    top -3px
                    margin-right 3px
                    path
                        t all
            &__image
                margin-bottom 10px
                width 100%
                padding-bottom 100%
                border 1px solid #2b2b2b
                background-size cover
                box-shadow inset 0 0 0 10px black
                cursor pointer
            svg
                width 20px
        .form
            max-width none
            margin 0
            &-group
                float left
            .radio-group

                margin-top 3px
                &, label
                    font-weight bold
                a
                    color white
                    border-line(alpha(@color, .5))
            .radio-group:last-of-type
                float right
        .direction
            float left
            margin-left 7px
            a
                background-image none !important
                size 40px
                text-align center
                border 1px solid #454a51
                display inline-block
                border-radius 4px
                float left
                line-height 40px
                margin-top -3px
            input:checked + a
                background-image none
                border-color red
                svg path
                    fill white
            svg
                height 25px
                middle()
                path
                    fill #454a51
        .pagination
            font-weight bold
            margin-top 10px
            a
                color white
                border-line(alpha(@color, .5))

        .dropdown
            width 265px
            &__item
                font-size 13px
                padding 9px 10px 0px

            &__frame
                background-color red
                margin-top -5px
                border-radius 0 0 4px 4px
            &__trigger
                background-color transparent
                border 1px solid red
                height 40px
                padding 0 10px
                font-size 13px
                line-height 41px
                border-radius 4px
                svg
                    top 15px
                &:after
                    display none
