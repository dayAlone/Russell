.product
    full-width()
    background url(/layout/images/texture.jpg) top center
    padding-bottom 50px
    &__name
        text-transform uppercase
        font-size 33px
        margin-bottom 10px
    &__images
        margin-top 30px
        column(5/12)
        min-height 485px
        background url(/layout/images/product.image.bg.png) bottom center no-repeat
        background-size contain
        text-align center
        img
            max-width 85%
            display inline-block
    &__thumb
        size 75px
        border 1px solid white
        background-size cover
        background-position center center
        display inline-block
        margin 0 10px
        margin-top 10px
        position relative
        &:hover
            .product__thumb-preview
                transform translateY(0)
                opacity 1
        &-preview
            pointer-events none
            size 376px
            position absolute
            bottom 100%
            left 50%
            margin-left -188px
            transform translateY(20px)
            border 5px solid white
            margin-bottom 20px
            t all
            opacity 0
            &:before
                top 100%
                left 50%
                border solid transparent
                content " "
                height 0
                width 0
                position absolute
                pointer-events none
                border-color: rgba(194, 225, 245, 0)
                border-top-color: white
                border-width: 16px
                margin-left: -16px
    &__artnumber
        font-size 24px
        margin-top 0px
