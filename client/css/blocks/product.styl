.product
    full-width()
    background url(/layout/images/texture.jpg) top center
    padding-bottom 50px
    &__name
        text-transform uppercase
        font-size 33px
        margin-bottom 10px
    &__tabs
        column(6/12)
        &-trigger
            a
                height 40px
                line-height 43px
                padding 0 12px
                color black
                font-size 12px
                background-color white
                margin-right 2px
                position relative
                z-index 2
                text-align center
                display inline-block
                &:after
                    position absolute
                    size 100%
                    background: linear-gradient(to bottom, rgba(230,230,230,1) 0%,rgba(230,230,230,1) 50%,rgba(177,177,177,1) 100%);
                    content ""
                    top 0
                    left 0
                    t opacity
                span
                    position relative
                    z-index 2
                > *
                    pointer-events none
                img
                    middle()
                    position relative
                    top -1px
                    margin-left 12px
                &:not(.active):hover
                    &:after
                        opacity .5
                &.active

                    &:after
                        opacity 0
        &-content
            background-color white
            color black
            font-size 13px
            line-height 1.2
            padding 30px 15px 25px
            display none
            border-radius 8px
            box-shadow 0 5px 15px 2px alpha(black,.5)
            border-top-left-radius 0
            &--active
                display block
            .featureIcons
                margin-top 20px
                background url(/layout/images/divide.png) top center no-repeat
                padding-top 20px
                ul
                    margin-bottom 0px
                    li
                        display inline
            .featureList
                > ul
                    padding-left 20px
                    overflow hidden
                    margin-bottom 0px
                    list-style square outside
                    li ul
                        padding-left 0px
                        margin-bottom 0px
                        list-style square outside
                    li
                        margin-bottom 6px
            p
                margin-bottom 15px
                br
                    display none
                &:last-of-type
                    margin-bottom 0px
    &__image
        width 100%
    &__images
        margin-top 30px
        column(6/12)
        min-height 485px
        background url(/layout/images/product.image.bg.png) bottom center no-repeat
        background-size contain
        text-align center
        img
            max-width 85%
            display inline-block
    &__thumb
        size 75px
        border 1px solid white
        background-size cover
        background-position center center
        display inline-block
        margin 0 10px
        margin-top 10px
        position relative
        &:hover
            .product__thumb-preview
                transform translateY(0)
                opacity 1
        &-preview
            pointer-events none
            size 376px
            position absolute
            bottom 100%
            left 50%
            margin-left -188px
            transform translateY(20px)
            border 5px solid white
            margin-bottom 20px
            t all
            opacity 0
            background-size cover
            &:before
                top 100%
                left 50%
                border solid transparent
                content " "
                height 0
                width 0
                position absolute
                pointer-events none
                border-color: rgba(194, 225, 245, 0)
                border-top-color: white
                border-width: 16px
                margin-left: -16px
    &__artnumber
        font-size 24px
        margin-top 0px
