.products
    full-width()
    background url(/layout/images/texture.jpg) top center
    padding-bottom 20px
    .text
        padding-top 0px
    &__line
        margin 0px 0 40px
    a
        color white
        min-height 295px
        display inline-block
    &__image
        width 100%
        height 200px
        line-height 200px
        img
            max-width 100%
            max-height 100%
            middle()
    &__item
        column(1/5, cycle: 5)
        height 295px
        background url(/layout/images/products.bg.png) top center
        background-size cover
        border-radius 8px
        padding 10px
        text-align center
        margin-bottom 30px
        t all
        box-shadow 0 0 0 0 alpha(black, 0)
        &:hover
            background-color black
            transform translateY(-10px)
            box-shadow 0 6px 15px 2px alpha(black, .5)
    &__artnumber
        font-size 12px
    &__name
        font-size 14px
        line-height 16px
        width 100%
        margin-bottom 8px
