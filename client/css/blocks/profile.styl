.profile
    &__nav
        width 100%
        background-color transparent
        border-bottom 1px solid #393c41
        margin-top 50px !important
        margin-bottom 40px
    a&__link
        padding 12px 20px 6px
        background transparent
        margin-right 2px
        font-size 16px
        display inline-block
        border-radius 5px 5px 0 0
        &:hover
            background transparent
        &--active
            &, &:hover
                background-color #393c41
                color white
