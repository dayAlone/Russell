.rating
    margin-top 20px
    margin-bottom 10px
    min-height 200px
    full-width()
    &__tools, &__title
        width 100%
        lost-utility clearfix
    &__tools
        float left
    &__image
        size 40px
        background-size cover
        border-radius 50%
        margin-right 15px
        display none
        @media (min-width: $scr_s)
            middle()
    &__total
        font-size 24px
        font-weight bold
        margin-top 8px
    &__name
        display inline-block
        position relative
        top 2px
        middle()
        font-size 15px
        line-height 1.2
        @media (min-width: $scr_md)
            br
                display none
    &__position
        font-size 15px
        position relative
        top 13px
    .table
        &__col
            lost-column 1.5/4
            &:first-of-type
                lost-column 1/4
            @media (min-width: $scr_s)
                lost-column 1/4
                &:nth-child(2)
                    lost-column 2/4
    &__shows
        color #7c7f82
        float right
        width 100%
        text-align center
        @media (min-width: $scr_s)
            text-align right
        a
            color #7c7f82
            &:hover
                color white
    &__pages
        padding-top 10px
    &__pages, &__shows
        min-height 1px
        @media (min-width: $scr_s)
            lost-column 1/2
        a
            color white
            font-size 14px

    &__tools
        margin 15px 0 5px
    &__title
        padding 0 20px
        @media (min-width: $scr_s)
            padding 0
        h3
            float left
            white-space normal
            margin-top 30px
            @media (min-width: $scr_s)
                font-size 20px
                margin-top 32px
            @media (min-width: $scr_md)
                font-size 25px
                margin-top 27px
        > h3
            margin-top 0px
            font-size 25px
            @media (min-width: $scr_s)
                lost-column 1.4/6
                margin-top 20px
            @media (min-width: $scr_sm)
                lost-column 1/5
            @media (min-width: $scr_md)
                margin-top 25px
                lost-column 1/3

    &__select
        lost-column 1/1
        @media (min-width: $scr_s)
            lost-column 2.3/6 3
        @media (min-width: $scr_sm)
            lost-column 2/5 3
        @media (min-width: $scr_md)
            lost-column 1/3

        > span
            float right
            font-size 12px
            color #5b5e60
            clear both
        .dropdown
            margin-top 17px
            full-width()
            &--dates
                float right
                width 79%
            &__frame
                border-radius 0 0 5px 5px
                margin-top -7px
            &--hover
                .dropdown
                    &__trigger
                        svg path
                            fill white
            &__item
                font-size 15px
            &__trigger
                background-color transparent
                border 1px solid red
                border-radius 5px
                height 48px
                line-height 49px
                font-weight bold
                t all
                font-size 17px
                @media (min-width: $scr_sm)
                    font-size 21px
                svg
                    max-width 14px
                    top 18px
                    path
                        fill red
                &:after
                    display none

.rating, winners
    .padding
        padding 130px 0 170px
        full-width()

.winners
    margin 40px 0 100px
    full-width()
    position relative
    &__network
        color #8e8e8e
    &__col
        @media (min-width: $scr_s)
            width (100/3)%
            float left
    &__item
        float left
        width 100%
        line-height 1
        text-align center
        position relative
        margin-bottom 40px
        @media (min-width: $scr_s)
            width (100/3)%
            margin-bottom 0px
        &.winners__item--full
            width 100%
            margin-bottom 35px
            padding-bottom 40px
            border-bottom 1px solid red
            h4, .winners__prize
                margin-top 50px
                position relative
            h4
                top 10px
        &--games-1
            left 50%
            transform translateX(-50%)
        &--games-2
            right 50%
            transform translateX(50%)
        &--games-2, &--games-3
            margin-top 100px
    &__position
        font-size 24px
        display inline-block
        width 150px
        border-bottom 1px solid red
        font-weight bold
        padding-bottom 25px
        margin-bottom 25px
    &__photo
        size 95px
        margin-top 25px
        background-size cover
        background-position top center
        border-radius 50%
        display inline-block

    &__name
        font-size 20px
        margin-top 23px
    &__prize
        display inline-block
        margin-top 15px
        font-size 14px
        padding 0 20px
        img
            max-width 30px
            vertical-align middle
            position relative
            top -5px
    &__scores
        text-transform uppercase
        color #9a9da0
        font-weight bold
        font-size 14px
        strong
            color white
            font-size 31px
            margin-bottom 3px
            display inline-block
