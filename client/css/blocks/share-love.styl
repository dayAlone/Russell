.share-love
    padding 60px 30px 0
    margin-top -60px
    full-width()
    background url(/layout/images/share-love.jpg) center bottom no-repeat
    &:before
        position absolute
        top 60px
        width 100%
        height 2px
        left 0
        background url(/layout/images/line.png) center top repeat-y
        background-size contain
        content ""
    &__action
        padding 40px 0 65px
        full-width()
    &__title
        margin 28px 0 24px
        max-width 222px
    &__item
        span(1/5)
        min-height: 182px !important
        background-size cover
        background-position center
        position relative
        color white
        display block
        *
            position relative
            z-index 2
        &:before
            position absolute
            top 0
            left 0
            size 100%
            min-height: 182px
            content ""
            opacity .6
            t opacity
            background-image linear-gradient(to top, rgba(0, 0, 0, 0.9) 0%, rgba(0, 0, 0, 0.9) 4%, transparent 35%, rgba(0, 0, 0, 0.9) 86%, rgba(0, 0, 0, 0.9) 100%)
        &:hover:before
            opacity .8
    &__name
        font-weight bold
        font-size 16px
        padding 9px 11px
        line-height 20px
    &__author
        position absolute
        bottom 0
        padding 9px 11px
        font-size 11px
        line-height 15px
    &__icon
        width 44px
        position absolute
        left 50%
        top 50%
        transform translate3d(-50%, -50%, 0)
