.stores
    lost-utility clearfix
    margin 60px 0 40px
    position relative
    z-index 2
    &__promo
        position absolute
        width 100%
        text-align center
        color black
        font-weight bold
        bottom 10px
        font-size 13px
    &__banner
        position absolute
        width 100%
        background-color #ff1320
        color white
        font-size 26px
        height 40px
        line-height 53px
        text-align center
        font-weight bold
        z-index 2
        transform translateX(-44%) translateY(-20%) rotate(-45deg)
    &__item
        background-position center center
        background-size contain
        position relative
        transition .2s all
        position relative
        overflow hidden
        box-shadow 0 0 0 0 alpha(black, 0)
        lost-column 1/2 0 0
        padding-bottom (100/2)%
        @media (min-width: $scr_xs)
            lost-column 1/3 0 0
            padding-bottom (100/3)%
        @media (min-width: $scr_sm)
            lost-column 1/4 0 0
            padding-bottom 25%
            &:hover
                box-shadow 0 10px 20px 5px alpha(black, .5)
                transform translateY(-10px) scale(1.01)
                z-index 1
                transition-delay .3s
        @media (min-width: $scr_md)
            lost-column 1/5 0 0
            padding-bottom 20%
        &--hover
            z-index 20
    & + p
        font-size 14px
        margin-bottom 40px
        color alpha(white, .7)
        @media (max-width: $scr_sm)
            padding 0 20px
