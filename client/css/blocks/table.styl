.table
    width 100%
    &__title
        border-top 1px solid #333741
        lost-utility clearfix
        border-bottom 1px solid #333741
        font-size 10px
        text-transform uppercase
        color #9a9ca0
        text-align center
        padding 8px 0 5px
    &__row
        padding 23px 0 20px
        lost-utility clearfix
        width 100%
        text-align center
        font-size 12px
        border-bottom 1px solid #333741

        &--message
            padding 33px 0 30px
            font-weight bold
            font-size 18px
    &__col
        float left
        &.right
            text-align right
        &.left
            text-align left
