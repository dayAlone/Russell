.test
    background url(/layout/images/kitchen/bg.jpg) bottom center
    background-size cover
    full-width()
    overflow hidden
    z-index 1
    border 1px solid #303130
    margin 50px 0 120px
    min-height 282px
    @media (min-width: $scr_s)
        min-height 420px
    @media (min-width: $scr_md)
        min-height 550px
    &__no-mobile
        @extend .kitchen__no-mobile
        @media (min-width: $game)
            display none
    &__share
        @extend .kitchen__share
    &__placeholder
        @extend .kitchen__placeholder
        .kitchen__block--inline .kitchen__score
            width auto
            margin 0 20px
            @media (min-width: $scr_s)
                margin 10px 20px 20px
            @media (min-width: $scr_md)
                margin 10px 20px 30px
        &--question
            margin-top 20px
            @media (min-width: $scr_s)
                margin-top 30px
            @media (min-width: $scr_md)
                margin-top 40px
            h3 + .test__divider
                @media (min-width: $scr_s)
                    margin 30px 0 35px

    &__images
        & + .test__answers
            padding 0
            a.test__answer
                float left
                width 25%

    &__answers, &__images
        float left
        width 100%

        margin-top 0px
        @media (min-width: $scr_md)
            padding 0 10%
    &__result
        h2
            margin-top 0px
    &__answers
        &--block
            poiner-events none
        &--4
            a.test__answer
                &:nth-child(3), &:nth-child(4)
                    margin-top 15px
            .test__images + &
                a.test__answer
                    margin-top 25px

            &.test__answers--long
                padding 0
                a.test__answer
                    position relative
                    text-align left
                    font-size 14px
                    line-height 1.3
                    padding-right 20px
                    min-height 40px
                    padding-left 35px
                    @media (min-width: $scr_s)
                        font-size 16px
                    @media (min-width: $scr_md)
                        font-size 22px
                        padding-left 45px
                    svg
                        position absolute
                        left 0

        &--3
            &.test__answers--long
                a.test__answer
                    width 50%
                    &:last-of-type
                        width 100%
                        margin-top 20px
                        @media (min-width: $scr_s)
                            margin-top 35px
            a.test__answer
                width (100/3)%
    a&__answer
        float left
        width 50%
        text-align center
        background-image none !important
        color white !important

        position relative
        margin-top 0px
        font-size 16px
        @media (min-width: $scr_s)
            font-size 18px
            margin-bottom 10px
        @media (min-width: $scr_md)
            font-size 26px

        &:hover
            color red !important
            img
                opacity .7
            svg
                path
                    opacity 1
                    stroke red
                    fill-opacity 1
                    fill red

        &--wrong
            &, &:hover
                svg
                    opacity 1
                    path
                        opacity 1
                        stroke red
                        fill-opacity 1
                        fill red
                span
                    color red
                    text-decoration line-through
        &--true
            &, &:hover
                svg
                    opacity 1
                    path
                        opacity 1
                        stroke green
                        fill-opacity 1
                        fill green
                span
                    color green
        svg

            middle()
            margin-right 10px
            margin-top -2px
            t all
            @media (min-width: $game)
                max-width 20px
            @media (min-width: $scr_s)
                max-width 25px
                margin-right 5px
            @media (min-width: $scr_md)
                max-width 30px
                margin-right 10px

            path
                t all
                opacity 1
                fill-opacity 0
                stroke white
        &--image
            line-height 80px !important
            @media (min-width: $scr_s)
                line-height 110px !important
            @media (min-width: $scr_md)
                line-height 150px !important
            svg
                position absolute
                top 50%
                left 50%
                opacity 0
                margin 0px
                z-index 2
                transform translateX(-50%) translateY(-50%)
        img

            t opacity
            middle()
            max-width 80px
            max-height 80px
            @media (min-width: $scr_s)
                max-width 110px
                max-height 110px
            @media (min-width: $scr_md)
                max-width 150px
                max-height 150px
    &__divider
        @extend .kitchen__divider
    &__rules
        @extend .kitchen__rules
    &__close
        @extend .kitchen__close
    &__block
        @extend .kitchen__block

    &__score
        @extend .kitchen__score

    &__ui
        border-bottom 2px solid red

        position absolute
        top 0
        left 0
        width 100%
        z-index 2
        line-height 39px
        height 40px
        @media (max-width: $scr_s)
            .test__col
                padding 0
        @media (min-width: $scr_s)
            line-height 59px
            height 60px
        @media (min-width: $scr_md)
            line-height 79px
            height 80px
        .test__score
            margin-bottom 0px
            margin-top 0px
    &__block
        &--inline
            display inline-block
            vertical-align middle
            line-height 38px
            height 38px
            top 0
            margin 0 !important
            span, .test__score
                display inline-block
                vertical-align middle
            span
                position relative
                margin-left 2px
                @media (min-width: $scr_s)
                    top 1px
            .test__score
                text-align center
                @media (min-width: $scr_sm)
                    border 1px solid white
                    margin 0 15px
    &__col
        width 50%
        padding 0 15px
        float left
        &:nth-child(2)
            text-align right
