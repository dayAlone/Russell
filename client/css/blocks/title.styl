.title
    full-width()
    position relative
    z-index 10

    &__line

        .title--counter &
            @media (max-width: $scr_s)
                margin-bottom 10px
            @media (min-width: $scr_s)
                margin-top 0px
        .title--small &
            display none
            @media (min-width: $scr_s)
                display block
                margin-top 15px
    &__flag
        position absolute
        background-color #e6151d
        height 24px
        font-weight bold
        z-index 20
        line-height 26px
        padding 0 10px
        text-align center
        width 100%
        font-size 13px
        bottom -16.5vw
        @media (min-width: $scr_s)
            font-size 15px
            left 0
            bottom 30px
            width auto
    &__number
        position relative
        size 30px
        border 2px solid red
        text-align center
        line-height 28px
        margin-right 10px
        font-size 15px
        border-radius 50%
        font-weight bold
        display inline-block

        margin-top -7px
        margin-bottom 5px
        @media (min-width: $scr_s)
            float left

        @media (min-width: $scr_md)
            margin-top 0px
            margin-bottom 20px
    &__group
        & + .title__col
            margin-bottom 20px
            @media (min-width: $scr_md)
                padding-right 0px
                text-align right
        @media (min-width: $scr_s) and (max-width: $scr_md)
            lost-column 3/4 0 0
            .title__col
                lost-column 1 0 0
                text-align left
            & + .title__col
                lost-column 1/4 0 0
                float right
    &__col
        font-size 12px
        margin-top 15px
        lost-column 1 0 0
        text-align center
        @media (min-width: $scr_s)
            text-align left
        p
            line-height 18px

            padding 0 20px
            @media (min-width: $scr_s)
                margin-bottom 0px
                padding 0
                float right
                text-align left
                width calc(100% - 45px)
        @media (min-width: $scr_md)
            lost-column 1/4 0 0
            padding-right 30px

            .button
                width 100%
                animation: zoomZoom .5s infinite alternate
    &__slider
        @media (max-width: $scr_s)
            padding 0 20px
        img
            max-width 100%
    &__question
        font-weight bold
        padding 10px 0
        font-size 20px
        line-height 21px
        text-align center
        padding 20px 10% 10px
        @media (min-width: $scr_s)
            padding 0
            text-align left
            lost-column 5/12 0 0
            lost-move -7/12 row 0
        @media (min-width: $scr_sm)
            font-size 22px
            line-height 23px
        @media (min-width: $scr_md)
            lost-column 4/12 0 0
            lost-move -8/12 row 0
            font-size 24px
            line-height 27px

    &__heart
        position relative
        top 3px

    &__actions
        text-align center
        margin-bottom 25px
        @media (min-width: $scr_s)
            margin-bottom 0px
            text-align right
            lost-column 3/12 0 0
            a.button
                float right

    &__image
        position relative

        .title--small &
            @media (min-width: $scr_s)
                margin-bottom 25px

    &__divider
        full-width()

    &__products

        text-align center
        position relative
        @media (min-width: $scr_s)
            lost-column 7/12 0 0
            lost-move 5/12
            text-align right
        @media (min-width: $scr_md)
            lost-column 8/12 0 0
            lost-move 4/12
        .title--counter &
            @media (max-width: $scr_s)
                margin-bottom 20px
        img
            margin-right 12px

            position relative
            z-index 3
            max-width 100%
            margin-top -44px
            @media (min-width: $scr_md)
                margin-top -74px

    &__counter
        min-height 20px
        @media (min-width: $scr_s)
            min-height 60px
        @media (min-width: $scr_s)
            lost-column 9/12 0

    &__description
        padding-top 9px

        font-size 14px
        line-height 19px
        padding 5px 25px 15px
        text-align center
        width 100%
        margin-bottom 10px
        @media (min-width: $scr_s)
            margin-bottom 14px
            text-align left
            padding 0
            lost-column 9/12 0 0
        @media (min-width: $scr_md)
            font-size 16px
            line-height 21px
        nobr
            position relative
            img
                position absolute
                top -3px
                right -10px
        .title--counter &
            width 100%
            margin-bottom 11px
            p
                max-width none
        p
            margin-bottom 0px
            @media (min-width: $scr_s)
                max-width 85%
            @media (min-width: $scr_md)
                max-width 78%
            strong
                font-weight bold

    &__love
        margin 25px 0 0px
        display none
        @media (min-width: $scr_s)
            display block

    & + .share-love
        margin-top -65px

@keyframes zoomZoom
    from
      transform scale(1)
    to
      transform scale(1.05)
